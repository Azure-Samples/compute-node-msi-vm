{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./typings",
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "rootDir": "."
  },
  "include": [
    "./lib/index.ts",
    "./lib/cleanup.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}